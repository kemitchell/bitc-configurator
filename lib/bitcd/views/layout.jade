doctype html
html
	head
				
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge')
		meta(name='viewport', content='width=device-width, initial-scale=1')
		
		title= pagetitle
		
		link(rel='stylesheet', href='/includes/stylesheets/bootstrap.min.css')
		link(rel='stylesheet', href='/includes/stylesheets/bootstrap-theme.min.css')
		link(rel='stylesheet', href='/includes/stylesheets/style.css')
		
		block head
	body
		div.navbar.navbar-inverse.navbar-fixed-top(role='navigation'): div.container
			div.navbar-header
				button.navbar-toggle(data-toggle='collapse', data-target='.navbar-collapse')
					span.sr-only Toggle navigation
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a.navbar-brand(href='/')= nav.brandname
			div.collapse.navbar-collapse
				ul.nav.navbar-nav: each itemname, itemhref in nav.items
					li(class=((nav.activepath == itemhref) ? 'active' : '')): a(href=itemhref)= itemname
		div.container
			block content
		
		script(src='/bower_components/jquery/jquery.min.js')
		script(src='/includes/javascripts/bootstrap.min.js')